#include <stdio.h>


int main(){
    int n;
    printf("Inserisci un numero >");
    scanf("%d", &n);
    
    if (n == 0)
        printf("null.");
    if (n % 2 != 0) {
        printf("Il numero %d è dispari. Il suo triplo è %d", n, n * 3);
    } else {
        // pari
        printf("Il numero %d è pari. Il suo doppio è %d", n, n * 2);
    }
    
    return 0;
}
